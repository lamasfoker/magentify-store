<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{{ 'app.home.meta_title'|trans }}{% endblock %}</title>
        <meta name="description"
              content="{% block meta_description %}{{ 'app.home.meta_description'|trans }}{% endblock %}"/>

        {#    <link rel="apple-touch-icon" href="{{ asset('build/assets/favicon-manifest.png') }}" /> #}
        {#    <link rel="icon" type="image/png" href="{{ asset('build/assets/favicon.png') }}" /> #}
        <meta name="msapplication-TileColor" content="#ffffff"/>
        <meta name="theme-color" content="#ffffff"/>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        {% block body %}{% endblock %}
    </body>
</html>
